// variables
$background = #CCCCFF
$text = #00046C

// mixins
cf()
  zoom 1
  &::after
  &::before
    content ''
    display table
  &::after
    clear both

// base styles
*
  box-sizing border-box

.container
  max-width 750px
  margin 100px auto 0
  padding 0 20px

.wrapper
  background-color #F5F5FF
  border 1px solid #D5D5D5

// responsive styles
@media only screen and (max-width 400px)
  .container
    padding 0 10px

